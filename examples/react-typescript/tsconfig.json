{
    "include": ["src"],
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "lib": ["ES2019", "dom"],
        "sourceMap": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "noEmitHelpers": true
    }
}