{
    "include": ["src"],
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": ["ES2019", "dom"],
        "sourceMap": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "noEmitHelpers": true
    }
}