{
    "include": ["src"],
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["ES2019", "dom"],
        "jsx": "react",
        "resolveJsonModule": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "paths": {
            "react": ["node_modules/preact/compat"],
            "react-dom": ["node_modules/preact/compat"]
        }
    }
}